<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/detail_fragment_top"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/toolbar"
        android:id="@+id/tbDetail"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:id="@+id/ivProductDetail"
        android:backgroundTint="@color/detail_fragment_top"
        android:background="@color/detail_fragment_top"
        android:src="@drawable/_1z_l05esis__sl1188_new"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tbDetail"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/detail_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivProductDetail"
        >
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tvProductName"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/oneplus_tv"
            android:layout_marginTop="25dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/spartanreg"
            android:padding="2dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPriceHeader"
            android:text="Price"
            app:layout_constraintStart_toStartOf="@id/btnAddToCart"
            app:layout_constraintBottom_toTopOf="@id/btnAddToCart"
            android:layout_marginBottom="40dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/spartanreg"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrice"
            android:text="16000"
            app:layout_constraintStart_toEndOf="@id/tvPriceHeader"
            android:gravity="end"
            android:textColor="@color/app_blue"
            android:layout_marginStart="15dp"
            android:textStyle="bold"
            android:fontFamily="@font/spartaneemibold600"
            app:layout_constraintTop_toTopOf="@id/tvPriceHeader"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/btnAddToCart"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddToCart"
            android:text="@string/add_to_cart"
            android:textAllCaps="false"
            android:backgroundTint="@color/app_blue"
            android:padding="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/spartanmedium500"
            android:textSize="16sp"
            android:layout_marginHorizontal="35dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/pfDetail"
        >
        <include layout="@layout/progress_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/neDetail"
        >
        <include layout="@layout/network_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <include layout="@layout/progress_bar"
        android:visibility="gone"
        android:id="@+id/pbDetail"/>

</androidx.constraintlayout.widget.ConstraintLayout>