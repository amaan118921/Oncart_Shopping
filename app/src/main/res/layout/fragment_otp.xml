<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:clickable="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_blue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            android:text="@string/begin_your_journey_with_oncart"
            android:textSize="25sp"
            android:fontFamily="@font/poppineseb"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/llLogin"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/login_draw"
            android:layout_marginTop="50dp"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="35dp"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/tvLogin"
                    android:text="@string/otp_verification"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="25dp"
                    android:fontFamily="@font/poppibold"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPhoneNumberHeader"
                    android:gravity="start"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@id/tvLogin"
                    app:layout_constraintTop_toBottomOf="@id/tvLogin"
                    android:text="@string/enter_the_otp_you_recieved_to"
                    android:fontFamily="@font/spartanmedium500"
                    android:layout_marginTop="45dp"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPhoneNumber"
                    app:layout_constraintTop_toBottomOf="@id/tvPhoneNumberHeader"
                    app:layout_constraintStart_toStartOf="@id/tvPhoneNumberHeader"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/spartanmedium500"
                    android:text="@string/_91_9767857572"
                    android:layout_marginTop="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/llOTP"
                    android:gravity="center"
                    android:layout_marginTop="35dp"
                    app:layout_constraintTop_toBottomOf="@id/tvPhoneNumber"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    >
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="45dp"
                        android:layout_height="75dp"
                        android:backgroundTint="@color/detail_fragment_top"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:id="@+id/et1"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:id="@+id/ed1"
                            android:gravity="center"
                            android:inputType="phone"
                            android:maxLength="1"
                            android:textSize="18sp"
                            android:fontFamily="@font/spartanreg"/>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="45dp"
                        android:layout_height="75dp"
                        android:backgroundTint="@color/detail_fragment_top"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:id="@+id/et2"
                        android:layout_marginStart="4dp"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="phone"
                            android:id="@+id/ed2"
                            android:maxLength="1"
                            android:textSize="18sp"
                            android:fontFamily="@font/spartanreg"/>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="45dp"
                        android:layout_height="75dp"
                        android:backgroundTint="@color/detail_fragment_top"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:id="@+id/et3"
                        android:layout_marginStart="4dp"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="phone"
                            android:id="@+id/ed3"
                            android:maxLength="1"
                            android:textSize="18sp"
                            android:fontFamily="@font/spartanreg"/>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="45dp"
                        android:layout_height="75dp"
                        android:backgroundTint="@color/detail_fragment_top"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:layout_marginStart="4dp"
                        android:id="@+id/et4"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="phone"
                            android:maxLength="1"
                            android:id="@+id/ed4"
                            android:textSize="18sp"
                            android:fontFamily="@font/spartanreg"/>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="45dp"
                        android:layout_height="75dp"
                        android:backgroundTint="@color/detail_fragment_top"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:layout_marginStart="4dp"
                        android:id="@+id/et5"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="phone"
                            android:id="@+id/ed5"
                            android:maxLength="1"
                            android:textSize="18sp"
                            android:fontFamily="@font/spartanreg"/>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="45dp"
                        android:layout_height="75dp"
                        android:backgroundTint="@color/detail_fragment_top"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:id="@+id/et6"
                        android:layout_marginStart="4dp"
                        >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="phone"
                            android:maxLength="1"
                            android:id="@+id/ed6"
                            android:textSize="18sp"
                            android:fontFamily="@font/spartanreg"/>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnVerify"
                    android:text="@string/verify"
                    android:backgroundTint="@color/app_blue"
                    android:textAllCaps="false"
                    android:fontFamily="@font/spartanmedium500"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="15dp"
                    android:padding="15dp"
                    android:textColor="@color/white"
                    app:cornerRadius="12dp"
                    app:layout_constraintTop_toBottomOf="@id/llOTP"
                    android:layout_marginTop="45dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>