<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvClearCart"
        android:text="@string/are_you_sure_you_want_to_clear_cart"
        android:textColor="@color/red"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/spartanreg"
        android:textStyle="bold"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnClearCart"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:text="@string/clear_cart"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        android:textColor="@color/white"
        android:fontFamily="@font/spartanreg"
        android:textSize="15sp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvClearCart"
        app:layout_constraintStart_toStartOf="@id/tvClearCart"
        app:layout_constraintEnd_toEndOf="@id/tvClearCart"
        android:layout_marginTop="25dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>