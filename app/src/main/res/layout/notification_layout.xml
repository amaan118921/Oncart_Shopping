<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <ImageView
        android:id="@+id/ivPush"
        android:layout_width="65dp"
        android:layout_height="45dp"
        android:scaleType="fitCenter"
        android:src="@drawable/_1z_l05esis__sl1188_new" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:id="@+id/ivAppIcon"
        android:src="@drawable/carts"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tvNamePush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="15dp"
        android:layout_alignEnd="@id/ivAppIcon"
        android:layout_toEndOf="@id/ivPush"
        android:fontFamily="@font/spartanreg"
        android:gravity="start"
        android:text="@string/mi_tv"
        android:textColor="@color/black"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tvPricePush"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNamePush"
        android:layout_marginStart="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="15dp"
        android:layout_alignEnd="@id/ivAppIcon"
        android:layout_toEndOf="@id/ivPush"
        android:gravity="start"
        android:text="@string/_1575"
        android:textColor="@color/app_blue"
        android:textSize="11sp"
        android:textStyle="bold" />

</RelativeLayout>