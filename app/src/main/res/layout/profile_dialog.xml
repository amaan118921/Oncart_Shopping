<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_white"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="7dp"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        >
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@id/rvProfile"
        app:layout_constraintEnd_toStartOf="@id/ivClose"
        android:layout_marginEnd="25dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvHeader"
        android:gravity="start"
        android:text="@string/select_an_avatar"
        android:textColor="@color/app_blue"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/spartanreg"
        app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/ivClose"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/tvHeader"
            app:layout_constraintEnd_toEndOf="@id/rvProfile"
            android:src="@drawable/close"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvProfile"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        android:layout_marginTop="10dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEnterName"
        android:text="@string/enter_your_name"
        app:layout_constraintTop_toBottomOf="@id/rvProfile"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:textColor="@color/app_blue"
        android:textStyle="bold"
        android:fontFamily="@font/spartanreg"
        app:layout_constraintStart_toStartOf="@id/rvProfile"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:id="@+id/cvName"
        app:layout_constraintEnd_toEndOf="@id/rvProfile"
        app:cardCornerRadius="30dp"
        app:strokeColor="@color/app_blue"
        app:strokeWidth="2dp"
        android:layout_marginTop="15dp"
        android:focusableInTouchMode="true"
        app:layout_constraintStart_toStartOf="@id/rvProfile"
        app:layout_constraintTop_toBottomOf="@id/tvEnterName"
     >
        <EditText
            android:padding="2dp"
            android:layout_width="match_parent"
            android:layout_marginEnd="20dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:theme="@style/et"
            android:maxLength="15"
            android:maxLines="1"
            android:textSize="12sp"
            android:id="@+id/etName"
            android:hint="@string/enter_your_name"
            android:textColor="@color/black"
            android:fontFamily="@font/spartanreg"
            android:layout_marginStart="20dp"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:layout_width="0dp"
        android:layout_height="53dp"
        app:cornerRadius="5dp"
        app:layout_constraintTop_toBottomOf="@id/cvName"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/rvProfile"
        app:layout_constraintEnd_toEndOf="@id/rvProfile"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:id="@+id/btnSave"
        android:fontFamily="@font/spartanreg"
        android:backgroundTint="@color/app_blue"
        android:textStyle="bold"
        android:textColor="@color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>