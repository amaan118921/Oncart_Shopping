<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_blue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        >
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:text="@string/begin_your_journey_with_oncart"
        android:textSize="25sp"
        android:fontFamily="@font/poppineseb"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/llLogin"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/login_draw"
        android:layout_marginTop="50dp"
        android:padding="30dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="@id/cvPhone"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tvLogin"
            android:text="@string/your_phone"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppibold"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="@id/cvPhone"
                android:layout_height="wrap_content"
                android:id="@+id/tvPhoneNumberHeader"
                android:gravity="start"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tvLogin"
                android:text="@string/phone_number"
                android:textColor="@color/black"
                android:fontFamily="@font/spartanmedium500"
                android:layout_marginTop="45dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@id/tvPhoneNumberHeader"
                android:layout_marginTop="15dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/cvPhone"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/ivIndia"
                    android:src="@drawable/india"
                    android:layout_marginStart="5dp"
                    app:layout_constraintBottom_toBottomOf="@id/etPhone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:maxLines="1"
                        android:inputType="phone"
                        android:hint="@string/enter_number"
                        android:id="@+id/etPhone"
                        app:layout_constraintStart_toEndOf="@id/ivIndia"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        android:maxLength="10"
                        android:textSize="15sp"
                        android:fontFamily="@font/spartanreg"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDigitOTP"
            app:layout_constraintStart_toStartOf="@id/cvPhone"
            app:layout_constraintTop_toBottomOf="@id/cvPhone"
            android:layout_marginTop="25dp"
            android:textSize="11sp"
            android:fontFamily="@font/spartanreg"
            android:padding="2dp"
            app:lineHeight="20dp"
            android:text="@string/a_6_digit_otp_will_be_sent_via_sms_to_verify_nyour_mobile_number"/>
       <com.google.android.material.button.MaterialButton
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/btnContinue"
           android:text="@string/continue_"
           android:backgroundTint="@color/app_blue"
           android:textAllCaps="false"
           android:fontFamily="@font/spartanmedium500"
           android:textSize="16sp"
           android:textStyle="bold"
           android:layout_marginHorizontal="15dp"
           android:padding="15dp"
           android:textColor="@color/white"
           app:cornerRadius="12dp"
           app:layout_constraintTop_toBottomOf="@id/tvDigitOTP"
           android:layout_marginTop="33dp"/>
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvSkip"
                android:text="@string/skip_"
                android:textStyle="bold"
                android:textColor="@color/app_blue"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/btnContinue"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/spartanmedium500"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>