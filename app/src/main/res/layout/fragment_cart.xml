<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detail_fragment_top"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <include layout="@layout/toolbar"
        android:id="@+id/tbCart"/>


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_marginTop="5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:id="@+id/clRV"
    android:layout_marginBottom="10dp"
    app:layout_constraintBottom_toTopOf="@id/cartContainer"
    app:layout_constraintTop_toBottomOf="@id/tbCart"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/rvCart"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/item_view_cart"/>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/clRV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/clRV"
        android:id="@+id/cartContainer"
        android:background="@color/detail_fragment_top"
        >
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTotalHeader"
            android:textColor="@color/black"
            android:fontFamily="@font/spartanreg"
            android:textSize="15sp"
            android:text="@string/total"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tvTotalHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvTotalHeader"
            app:layout_constraintBottom_toBottomOf="@id/tvTotalHeader"
            android:textSize="17sp"
            android:id="@+id/tvPriceValue"
            android:textColor="@color/app_blue"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="@string/_1575"
            android:layout_marginStart="25dp"
            android:gravity="end"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/btnCheckout"
            app:layout_constraintTop_toBottomOf="@id/tvTotalHeader"
            app:layout_constraintEnd_toEndOf="@id/tvPriceValue"
            app:layout_constraintStart_toStartOf="@id/tvTotalHeader"
            android:layout_marginTop="10dp"
            android:text="@string/checkout"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            android:fontFamily="@font/spartanmedium500"
            android:backgroundTint="@color/app_blue"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tbCart"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:id="@+id/pfCart"
        >
        <include layout="@layout/progress_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tvEmptyCart"
        android:text="@string/empty_cart"
        android:gravity="center"
        android:textSize="20sp"
        android:visibility="gone"
        android:fontFamily="@font/spartanreg"
        android:textColor="@color/app_blue"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>